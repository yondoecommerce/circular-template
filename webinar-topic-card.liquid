<div class="long-card">
    <div class='card-info'>
        <div class="title one-line"><a href='{{ topic.url }}'>{{ topic.title }}</a></div>
        <div class="description">{{topic.descriptionHtml}}</div>
        <div class="card-image">
            <div class="card-image-wrapper">
                <a href="{{topic.url}}">
                    {% if topic.imageSrc != null %}
                    <img class="image" src='{{ topic.imageSrc }}' />
                    {% else %}
                    <img class="image" src='https://az415508.vo.msecnd.net/static/no_image_available_580x435.png' />
                    {% endif %}
                </a>
            </div>
        </div>
        
        <div class="webinar-time">
            {% for time in topic.upcoming %}
            {% if forloop.first %}
            {{ time.startTimeUtc | local_time_format:'ddd, MMM DD'  }}
            {% endif %}
            {% endfor %}
        </div>
        <div class="details">
            <div>{{topic.price | money}}</div>
            <div>
                {% for time in topic.upcoming %}
                {% if forloop.first %}
                {{ time.startTimeUtc | local_time_format:'h:mm a'  }}
                {% endif %}
                {% endfor %}
            </div>
        </div>

        <div class="register">
            <a class='btn btn-default btn-primary btn-lg' href="{{topic.url}}">Register</a>
        </div>

        <div class="additional-info">
            <a href="{{topic.url}}">Additional {% if topic.upcoming.size < 2 %}info{% else %}times{% endif %} <i class="fa fa-angle-double-right"></i></a>
        </div>
    </div>
</div>