<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>

    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
    <meta name="viewport" content="width=device-width, initial-scale=1">
        
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    {{ 'plugins/plugins-bundle.min.css' | asset_url | stylesheet_tag }}
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.css" rel="stylesheet">
    
    <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>

    <style>
    .video-js {
        overflow: hidden;
    }
    
    .video-js .logo {
        position: absolute;
        display: block;
        height: 350px;
        width: 5px;
        top: 0;
        right: 1px;
        z-index: 1002;
    }

    .video-js .vjs-watermark {
        width: 100px;
        opacity: 0.5;
        z-index: 0 !important;
    }    
    
    .video-js .text-watermark {
        position: absolute;
        top: 0;
        right: 0;
        background-color: @navbar-default-bg;
        text-align:center;
        padding: 5px;
        color: @navbar-default-color;
        opacity: 0.5;
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-size:15px;
    }

    .video-js .vjs-embed-window {
        left: 10%;
        width: 80%;
        height: auto;
    }

    .video-js .vjs-embed-window textarea{
        width: 96%;
    }
                
    .preview-thumbnail{  
        background-image: url('{{video.thumbnail720Url}}');      
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background-position: center;
        background-repeat: no-repeat;
        -moz-transition: opacity .5s cubic-bezier(0.0,0.0,0.2,1);
        -webkit-transition: opacity .5s cubic-bezier(0.0,0.0,0.2,1);
        transition: opacity .5s cubic-bezier(0.0,0.0,0.2,1);
        background-size: cover;
        -moz-background-size: cover;
        -webkit-background-size: cover;
    }
    
    .preview-thumbnail .img-thumbnail{
        border: none !important;
        border-radius: 0 !important;
        display:block !important;
        padding: 0 !important;
    }

    .end-frame {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        background-color: #ffffff;
        z-index: 3;
        text-align: center;
        color: #000;
        overflow-y: auto;
        overflow-x: hidden;
    }

    #video-player .end-frame{
        bottom: 30px;
    }

    .end-frame .panel {
        margin-bottom: 0px;
        box-shadow: none;
        display: table;
        height: 100%;
        width: 100%;
    }

    .video-purchase {
        vertical-align: middle;
        display: table-cell;
    }

    @media (max-width: 1200px) {
        .video-purchase {
            font-size: 11px !important;
        }

        .video-purchase .title {
            font-size: 14px !important;
        }

        .video-purchase .section {
            padding-bottom: 10px !important;
        }

        .video-purchase .section .btn.btn-lg {
            padding: 1px 5px;
            font-size: 12px;
            line-height: 1.5;
            border-radius: 3px;
        }

        .video-purchase .section .btn.video-rental, 
        .video-purchase .section .btn.video-subscription {
            width: 150px !important;
            display:inline-block;
        }
    }

    .vjs-control-bar {
        z-index: 1;
    }

    .video-purchase {
        font-size: 14px;
    }

    .video-purchase .title {
        font-size: 18px;
    }

    .video-purchase .section {
        padding-bottom: 30px;
    }

    .video-purchase .section .btn.video-rental, 
    .video-purchase .section .btn.video-subscription {
        width: 250px;
        display:inline-block;
    }
    
    .vjs-error-dialog {
        background: #242424;
        background: -webkit-linear-gradient(top, rgba(69,69,69,0.8) 0%, rgba(35,35,35,0.8) 50%,rgba(22,22,22,0.8) 50%, rgba(54,54,54,0.8) 100%);
        background: -o-linear-gradient(top, #242424 50%,#1f1f1f 50%,#171717 100%); /* Opera11.10+ */
        background: -ms-linear-gradient(top, #242424 50%,#1f1f1f 50%,#171717 100%); /* IE10+ */
        border: 2px solid #fff;
        border-radius: 25px;
        color: white;
        font-size: 24px;
        left: 0;
        margin: 0 auto;
        padding: 10px 15px;
        cursor: pointer;
        position: absolute;
        right: 0;
        text-align: center;
        width: 300px;
        top: 10%;
        z-index: 2;
    }

    </style>
</head>
<body onload="resize()" style="margin:0">
    <div style="position: absolute;top: 0;left: 0;bottom: 0;right: 0;display: table;height: 100%;width: 100%;overflow: hidden;">
        {% if error != null %}
        <div style="vertical-align: middle; display: table-cell; text-align:center; background-color:black; color:white;">
            <p>
                {{error}}
            </p>
        </div>
        {% else %}
        <div class="video-player" style="vertical-align: middle; display: table-cell;">
            {% include video-player%}
        </div>
        {% endif %}
    </div>
    <!-- scripts -->
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>

    {% if error == null %}
    {% include video-player-scripts %}
    <script>
       

        function resize() {
            // maintains aspect ratio of video
            if ($("#video-player").length > 0) {
                var height = window.innerHeight;
                //$(this).css("height", height * ratioW);
                document.getElementById('video-player').setAttribute("style", "height:" + height + "px");
            }
        }

        window.onresize = function (event) {
            resize();
        };
                
        $(".video-player").on('click', ".video-rental", function (event) {
            var videoId = $(".video-rental").attr("data-video");
            window.open("/cart/addvideo?videoid=" + videoId, "_blank");
            event.stopPropagation();
        });

        $(".video-player").on('click', ".video-subscription", function (event) {
            window.open("/cart/addvideo?subscribe=1", "_blank");
            event.stopPropagation();
        });

        $("#video-player-thumb").click(function (event) {
            // prevent to open boostrap modal
            event.stopPropagation();

            var endFrame = $('#end-frame').html();
            $('.video-player').append(endFrame);
            $('.end-frame').show();
        });
    </script>
    {% endif %}
</body>

</html>
