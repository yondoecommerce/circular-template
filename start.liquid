{% extends base %}
{% block title %}Join Meeting - {{ store.name }}{% endblock %}
{% block content %}

<form class="form-signin" role="form" method="POST">
    <h3 class="form-signin-heading">Join Meeting</h3>
       
    <p><input type="text" name="Code" class="form-control last" placeholder="enter code"  {% if Code != null %} value={{ code }} {% endif %} required autofocus/></p>
        
    {% if errors.size > 0 %}
    <div class="alert alert-danger">
        {% for error in errors %}
        <div>{{error}}</div>
        {% endfor %}
    </div>
    {% endif %}
    
    <button class="btn btn-lg btn-primary btn-block" type="submit">Start</button>
    
</form>
    
{% endblock %}